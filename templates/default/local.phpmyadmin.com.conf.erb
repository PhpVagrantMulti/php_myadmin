<VirtualHost *:80>
  ServerName local.phpmyadmin.com
  DocumentRoot /var/www/html/local.phpmyadmin.com

  <Directory /var/www/html/local.phpmyadmin.com>
    Options Indexes FollowSymLinks MultiViews
    AllowOverride FileInfo
    Require all granted
  </Directory>

  # Possible values: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn
  ErrorLog /var/log/apache2/local.phpmyadmin.error-log
  CustomLog /var/log/apache2/local.phpmyadmin.access-log combined
</VirtualHost>
